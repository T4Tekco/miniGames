<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.braingame.login.ChangePassFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#A19A9A"
        app:cardCornerRadius="35dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/braingame" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="375dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input"
        android:hint="Enter Your Phone Number"
        android:inputType="number"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="220dp"
        android:text="Verify"
        android:backgroundTint="#ED4646"
        app:layout_constraintTop_toBottomOf="@+id/edtPhone"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtVerifyCode"
        android:layout_width="375dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_input"
        android:hint="Verify-Code"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVerify" />

    <TextView
        android:id="@+id/txtResendCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="20dp"
        android:text="Resend code"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/edtVerifyCode" />

    <EditText
        android:id="@+id/edtNewPass"
        android:layout_width="375dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_input"
        android:hint="New Password"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResendCode" />

    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="375dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_input"
        android:hint="Confirm Password"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNewPass" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="Change Password"
        android:backgroundTint="#ED4646"
        app:layout_constraintTop_toBottomOf="@+id/edtConfirmPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>